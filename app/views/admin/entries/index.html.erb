<h1>Listing entries</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Context</th>
      <th>Description</th>
      <th>Button link</th>
      <th>Button text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.id %></td>
        <td><%= entry.title %></td>
        <td><%= entry.context %></td>
        <td><%= entry.description %></td>
        <td><%= entry.button_link %></td>
        <td><%= entry.button_text %></td>
        <td><%= link_to 'Show', admin_entry %></td>
        <td><%= link_to 'Edit', edit_admin_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', admin_entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_admin_entry_path %>
