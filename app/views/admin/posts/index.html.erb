<h1>
    Listing posts
    <%= link_to 'New Post', new_admin_post_path, :class => "button", :style => "float: right;" %>
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Id</th>
      <th style="width: 40%;">Title</th>
      <th style="width: 20%;">Excerpt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Id</td>
      <td>Title</td>
      <td>Excerpt</td>
      <td><a href="#">Show</a></td>
      <td><a href="#">Edit</a></td>
      <td><a href="#">Destroy</a></td>
    </tr>
    <tr>
      <td>Id</td>
      <td>Title</td>
      <td>Excerpt</td>
      <td><a href="#">Show</a></td>
      <td><a href="#">Edit</a></td>
      <td><a href="#">Destroy</a></td>
    </tr>
    <tr>
      <td>Id</td>
      <td>Title</td>
      <td>Excerpt</td>
      <td><a href="#">Show</a></td>
      <td><a href="#">Edit</a></td>
      <td><a href="#">Destroy</a></td>
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.excerpt %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
